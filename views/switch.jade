extends layout

block content
    // Body content
    #content.clearfix
        .contentwrapper
            .row
                - for(var i in list)
                    .col-lg-4
                        .panel.panel-default
                            .panel-heading
                                h4.clearfix
                                    span.left #{list[i].name}
                                    form.panel-form.right(action='')
                                        .iToggle-button
                                            input.nostyle(type='checkbox')
                                a.minimize(href='#') 收起
                            .panel-body.securityImg
                                img(src="/images/mod/#{list[i].type}.jpg")
                
block footer
    script(type="text/javascript", src="js/switch.js")
